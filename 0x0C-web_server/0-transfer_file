#!/bin/bash

# Check if at least 4 arguments are provided
if [ $# -lt 4 ]; then
  echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
  exit 1
fi

# Assign input arguments to variables
PATH_TO_FILE=$1
IP=$2
USERNAME=$3
PATH_TO_SSH_KEY=$4

# Check if the file to transfer exists
if [ ! -f "$PATH_TO_FILE" ]; then
  echo "Error: File '$PATH_TO_FILE' does not exist."
  exit 1
fi

# Use scp to transfer the file to the home directory of the user on the server
scp -i "$PATH_TO_SSH_KEY" -o StrictHostKeyChecking=no "$PATH_TO_FILE" "$USERNAME@$IP:~/"

# Check if the scp command was successful
if [ $? -eq 0 ]; then
  echo "File '$PATH_TO_FILE' successfully transferred to '$USERNAME@$IP:~/'"
else
  echo "Error: Failed to transfer file."
  exit 1
fi

