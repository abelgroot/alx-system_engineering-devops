#!/usr/bin/env bash
# This script ensures Nginx is installed, running, and listening on port 80.

# Install Nginx if not already installed
if ! command -v nginx &> /dev/null; then
    apt-get update
    apt-get install -y nginx
fi

# Ensure Nginx is running
if ! service nginx status &> /dev/null; then
    service nginx start
fi

# Check if Nginx is listening on port 80
if ! netstat -tuln | grep ":80" &> /dev/null; then
    # Add listen directive to Nginx configuration if missing
    if ! grep -q "listen 80;" /etc/nginx/sites-available/default; then
        sed -i '/server {/a \    listen 80;' /etc/nginx/sites-available/default
    fi

    # Test Nginx configuration
    nginx -t

    # Restart Nginx to apply changes
    service nginx restart
fi

# Ensure port 80 is allowed through the firewall
if command -v ufw &> /dev/null; then
    ufw allow 80/tcp
fi

# Verify Nginx is listening on port 80
curl -I http://localhost:80
