#!/usr/bin/env bash
# This script demonstrates handling of different signals and writes its PID to a file.

# Set up the PID file
PID_FILE="/var/run/myscript.pid"
echo $$ > "$PID_FILE"

# Signal handler for SIGTERM
handle_sigterm() {
  echo "I hate the kill command"
	exit 15
}

# Signal handler for SIGINT
handle_sigint() {
  echo "Y U no love me?!"
}

# Signal handler for SIGQUIT and SIGTERM to clean up and exit
cleanup_and_exit() {
  rm -f "$PID_FILE"
  exit 0
}

# Trap signals
trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap cleanup_and_exit SIGQUIT SIGTERM

# Infinite loop with output
while true; do
  echo "To infinity and beyond"
  sleep 2
done
